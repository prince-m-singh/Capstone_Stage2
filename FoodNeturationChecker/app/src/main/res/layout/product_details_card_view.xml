<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name_lebel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:minHeight="5dp"
            android:text="Name:"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_product_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            card_view:layout_constraintStart_toEndOf="@+id/tv_product_name_lebel"
            android:layout_marginStart="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            card_view:layout_constraintHorizontal_bias="0.024" />

        <TextView
            android:id="@+id/tv_barcode_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="BarCode:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_product_name_lebel" />

        <TextView
            android:id="@+id/tv_barcode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8902519002358"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_product_name_value"
            card_view:layout_constraintStart_toEndOf="@+id/tv_barcode_name_label"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_grade_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Grade:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_barcode_name_label" />

        <TextView
            android:id="@+id/tv_grade_value"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="A"
            card_view:layout_constraintStart_toEndOf="@+id/tv_grade_label"
            android:layout_marginStart="12dp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_barcode_name_label"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/tv_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Quantity: "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/tv_barcode_value"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_product_name_value" />

        <TextView
            android:id="@+id/tv_quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            card_view:layout_constraintStart_toEndOf="@+id/tv_quantity_label"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_product_name_value"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintHorizontal_bias="0.022" />

        <TextView
            android:id="@+id/tv_categories_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Categories:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/tv_grade_value"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_barcode_value" />

        <TextView
            android:id="@+id/tv_categories_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:singleLine="false"
            card_view:layout_constraintStart_toEndOf="@+id/tv_categories_label"
            android:layout_marginStart="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_quantity_label"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_brand_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_categories_value"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_brand_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="BrandValue"
            card_view:layout_constraintStart_toEndOf="@+id/tv_brand_label"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_categories_value" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>