<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">


        <ImageView
            android:id="@+id/iconId"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/icon_content"
            android:layout_alignParentLeft="true" />


        <TextView
            android:id="@+id/tvVersionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iconId"
            android:layout_toRightOf="@+id/iconId"
            android:minHeight="5dp"
            tools:text="@string/barcode"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvVersionName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="5dp"
            tools:text="@string/status"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_below="@+id/tvVersionName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/iconId"
            android:layout_toEndOf="@+id/iconId" />


        <TextView
            android:id="@+id/tvVersionName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            tools:text="@string/date_time"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_below="@+id/tvVersionName2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/iconId"
            android:layout_toEndOf="@+id/iconId" />

    </RelativeLayout>

</android.support.v7.widget.CardView>